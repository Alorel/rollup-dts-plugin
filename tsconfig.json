{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2019",
    "rootDir": ".",
    "baseUrl": "src",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "module": "esnext",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "stripInternal": true,
    "importHelpers": true,
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "include": [
    "src"
  ]
}
